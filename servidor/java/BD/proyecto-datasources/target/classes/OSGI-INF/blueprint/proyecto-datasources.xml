<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:enc="http://karaf.apache.org/xmlns/jasypt/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!-- configure properties -->
    <cm:property-placeholder id="properties" persistent-id="proyecto.datasources"/>

    <enc:property-placeholder>
        <enc:encryptor class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor">
            <property name="config">
                <bean class="org.jasypt.encryption.pbe.config.EnvironmentStringPBEConfig">
                    <property name="algorithm" value="${db.algorithm}"/>
                    <property name="password" value="${db.key}"/>
                </bean>
            </property>
        </enc:encryptor>
    </enc:property-placeholder>

    <!-- MDTH DATASOURCE CONFIGURATION -->
    <bean class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" id="proyectoDataSource">
        <property name="driverClassName" value="${proyecto.driver}"/>
        <property name="url" value="${proyecto.url}"/>
        <property name="username" value="${proyecto.username}"/>
        <property name="password" value="${proyecto.password}"/>
        <property name="validationQuery" value="${proyecto.validationQuery}"/>
        <property name="validationQueryTimeout">
            <value type="int">${proyecto.validationQueryTimeout}</value>
        </property>
        <property name="initialSize" value="${proyecto.pool.initialSize}"/>
        <property name="maxActive" value="${proyecto.pool.maxActive}"/>
        <property name="minIdle" value="${proyecto.pool.minIdle}"/>
        <property name="maxIdle" value="${proyecto.pool.maxIdle}"/>
        <property name="maxWait" value="${proyecto.pool.maxWait}"/>
        <property name="poolPreparedStatements" value="true"/>
        <property name="maxOpenPreparedStatements" value="${proyecto.pool.maxOpenPreparedStatements}"/>
    </bean>

    <service interface="javax.sql.DataSource" ref="proyectoDataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="${proyecto.jndi}"/>
            <entry key="datasource.name" value="${proyecto.dsName}"/>
            <entry key="name" value="${proyecto.dsName}"/>
        </service-properties>
    </service>
    <!-- MDTH DATASOURCE CONFIGURATION -->
</blueprint>
